<div class="container">
    <h3> Testear worker </h3>

    <h5> Este worker crea items en la base de datos local, los publica en ML y finalmente los pausa. </h5>

    <%= form_with local:true, url: "/stock_ml/test_worker/test", method: :post do |form| %>
        <div class="form-group row">
            <%=form.label :quantity_of_items%>
            <%=form.text_field :quantity_of_items%>
        </div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div>
            <%= form.submit%>
        </div>
    <% end %>
</div>