<div  class="container">
    <p id="notice"><%= notice %></p>
    <h3> Editar producto de mercado libre </h3>
    <%= form_with local:true, url: "update", method: :put do |form| %>
        <div class="form-group row">
            <%=form.label :title%>
            <%=form.text_field :title, :value => @item.title %>
        </div>

        <div class="form-group row">
            <%=form.label :description%>
            <%=form.text_field :description, :value => @item.description%>
        </div>
        
        <div class="form-group row">
            <%=form.label :available_quantity%>
            <%=form.text_field :available_quantity, :value => @item.available_quantity%>
        </div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div>
            <%= form.submit%>
        </div>
    <% end %>
</div>